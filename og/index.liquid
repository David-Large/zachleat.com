<style>
.og {
  background-color: #fff;
  display: grid;
  grid-template-columns: repeat(auto-fill, 1200px);
}
.og-preview {
  border: none;
}
</style>
<div class="og">
{%- for post in collections.posts %}
  <a href="/opengraph{{ post.url }}"><iframe class="og-preview" style="pointer-events: none" loading="lazy" width="1200" height="630" src="/opengraph{{ post.url }}"></iframe></a>
{%- endfor %}
</div>