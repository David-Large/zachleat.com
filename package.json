{
  "name": "zachleat.com",
  "version": "2.4.3",
  "description": "The website of @zachleat",
  "dependencies": {
    "@zachleat/filter-container": "^2.0.3",
    "fg-loadjs": "^1.1.0",
    "infinity-burger": "^3.0.0",
    "speedlify-score": "^2.0.2"
  },
  "engines": {
    "node": "14"
  },
  "private": true,
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-cache-assets": "^2.3.0",
    "@11ty/eleventy-img": "1.0.0-beta.0",
    "@11ty/eleventy-plugin-rss": "^1.1.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.2",
    "chalk": "^4.1.2",
    "cheerio": "^1.0.0-rc.10",
    "debug": "^4.3.2",
    "dotenv": "^10.0.0",
    "fast-glob": "^3.2.7",
    "fs-extra": "^10.0.0",
    "gray-matter": "^4.0.3",
    "grunt": "^1.4.1",
    "grunt-cli": "^1.4.3",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-compress": "^2.0.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^4.0.0",
    "grunt-contrib-htmlmin": "^3.1.0",
    "grunt-sass": "^3.1.0",
    "grunt-shell": "^3.0.1",
    "grunt-terser": "^2.0.0",
    "html-entities": "^2.3.2",
    "lodash": "^4.17.21",
    "luxon": "^2.0.2",
    "markdown-it": "^12.2.0",
    "markdown-it-anchor": "^8.3.0",
    "matchdep": "^2.0.0",
    "natural": "^5.0.5",
    "node-fetch": "^2.6.1",
    "node-sass": "^6.0.1",
    "normalize-path": "^3.0.0",
    "numeral": "^2.0.6",
    "random-case": "1.0.0",
    "sanitize-html": "^2.4.0",
    "terser": "^5.7.2",
    "time-grunt": "^1.4.0",
    "twitter-avatar-url": "^2.1.0"
  },
  "scripts": {
    "check-links": "npx check-html-links _site",
    "build-with-assets": "grunt",
    "build": "npx @11ty/eleventy --quiet",
    "start": "npx @11ty/eleventy --quiet --serve",
    "webmentions": "ELEVENTY_FEATURES=webmentions npx @11ty/eleventy --quiet",
    "git-check": "if [[ $(git --no-pager diff HEAD --name-only) ]]; then echo 'You have uncommited changes.'; exit 1; fi",
    "tag-release": "npm run git-check && git tag `date '+deploy-%Y%m%d-%H%M%S'` && git push --tags",
    "popular": "npm run git-check && ./refresh-populars.sh && git add -A && git commit -m 'Popular posts data.' && git push origin master",
    "deploy": "ELEVENTY_PRODUCTION=true grunt deploy && npm run tag-release",
    "popular-deploy": "npm run popular && npm run deploy"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/zachleat/zachleat.com.git"
  },
  "author": "Zach Leatherman",
  "license": "MIT"
}
